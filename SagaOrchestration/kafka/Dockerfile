FROM wurstmeister/kafka:2.11-2.0.0
ENV KAFKA_BROKER_ID=1
ENV KAFKA_ADVERTISED_HOST_NAME=kafka
ENV KAFKA_ADVERTISED_PORT=9092
ENV BROKER_ID_COMMAND='hostname | cut -d'-' -f2'
ENV KAFKA_ZOOKEEPER_CONNECT=172.17.0.2:2181
ENV KAFKA_CREATE_TOPICS=auctions:10:1
ENV KAFKA_ADVERTISED_HOST_NAME=kafka

EXPOSE 9092
RUN exec